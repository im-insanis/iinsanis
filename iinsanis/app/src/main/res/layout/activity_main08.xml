<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5B2C2">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_marginTop="0dp"
            android:fontFamily="@font/jua"
            android:text="상품명"
            android:textColor="#000000"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/productname"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@drawable/textviewbox"
            android:ems="10"
            android:fontFamily="@font/jua"
            android:gravity="center"
            android:inputType="textPersonName"
            android:text=" "
            android:textColor="#000000"
            android:textSize="39sp"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/textView08"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:fontFamily="@font/jua"
            android:text="가격"
            android:textColor="#000000"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/price"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@drawable/textviewbox"
            android:fontFamily="@font/jua"
            android:gravity="center"
            android:text=" "
            android:textColor="#000000"
            android:textSize="39sp"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:fontFamily="@font/jua"
            android:gravity="center"
            android:text="행사정보"
            android:textColor="#000000"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/saleinfo"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@drawable/textviewbox"
            android:ems="10"
            android:fontFamily="@font/jua"
            android:gravity="center"
            android:inputType="textPersonName"
            android:text=" "
            android:textColor="#000000"
            android:textSize="39sp"
            tools:ignore="SpeakableTextPresentCheck" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/minus"
                android:layout_width="110dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginStart="27dp"
                android:background="@drawable/edgeff4163"
                android:backgroundTint="#FF4163"
                android:text="-"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="35sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/number"
                android:layout_width="155dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginStart="-10dp"
                android:background="@drawable/textviewbox2"
                android:backgroundTint="#ffffff"
                android:fontFamily="@font/jua"
                android:inputType="textPersonName"
                android:text="1"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="25sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/plus"
                android:layout_width="110dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginStart="-10dp"
                android:background="@drawable/edge36bcb4"
                android:backgroundTint="#36BCB4"
                android:text="+"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="35sp"
                android:textStyle="bold" />
        </LinearLayout>

        <Button
            android:id="@+id/ok"
            android:layout_width="220dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/edgeff006b"
            android:backgroundTint="#ff006b"
            android:fontFamily="@font/jua"
            android:text="선택 완료"
            android:textColor="#000000"
            android:textSize="40dp" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>